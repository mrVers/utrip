<!DOCTYPE>
<html lang="sl_SI">
<% include header.ejs %>

	<body>

		<!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
		<div class="container">

			<div class="row" style="margin-top:20px;">
				<div class="brand">
					<a href="/"><h5><i class="fa fa-shopping-cart"></i> utripStore :)</h5></a>
				</div>
				<a class="button button-primary u-pull-right"><i class="fa fa-shopping-cart"></i> Cart <span class="simpleCart_total"></span></a>
			</div>
			<div class="row">
				<div class="column">
					<div class="simpleCart_shelfItem">
						<div class="four columns">
							<img src="/uploads/<%- item.coverImage %>" class="item_thumb" />
						</div>
						<div class="eight columns">
							<h5 class="item_name"><%- item.title %></h5>
							<p>
								<%- item.body %>
							</p>
							<span class="item_price"><%- item.price %> €</span>
							<div class="qty">
								<label>QTY</label>
								<input type="number" class="item_Quantity" step="1" min="1" value="1">
							</div>

							<a class="item_add button u-pull-right" href="#"> Add to Cart </a>
						</div>
					</div>
				</div>
			</div>

			<!-- Cart
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
			<div class="hidden">
				<div id="cart">
					<h2>Cart</h2>
					<div class="row">

						<div class="eight columns">
							<div class="simpleCart_items"></div>
						</div>

						<div class="four columns">
							<div class="cart_info">
								<div class="cart_info_item cart_itemcount">Items:
									<div class="simpleCart_quantity"></div>
								</div>
								<div class="cart_info_item cart_taxrate">Tax Rate:
									<div class="simpleCart_taxRate"></div>
								</div>
								<div class="cart_info_item cart_tax">Tax:
									<div class="simpleCart_tax"></div>
								</div>
								<div class="cart_info_item cart_shipping">Shipping:
									<div class="simpleCart_shipping"></div>
								</div>
								<div class="cart_info_item cart_total"><b>Total: <div class="simpleCart_grandTotal"></div></b></div>
							</div>
						</div>

						<a href="javascript:;" class="simpleCart_empty button u-pull-left">Empty Cart <i class="fa fa-trash-o"></i></a>
						<a href="javascript:;" class="button button-primary simpleCart_checkout u-pull-right">Checkout <i class="fa fa-arrow-right"></i></a>

					</div>
				</div>
			</div>

			<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
	</body>

	<% include footer.ejs %>

</html>